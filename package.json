{
  "name": "apple-calendar-mcp",
  "version": "1.0.0",
  "module": "index.ts",
  "type": "module",
  "description": "Calendar-only Apple MCP server for reliable agent workflows",
  "author": "Rafael Cabrera",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/re-fael/apple-mcp-n8n.git"
  },
  "keywords": [
    "mcp",
    "apple",
    "calendar",
    "eventkit",
    "n8n"
  ],
  "bin": {
    "apple-mcp": "./dist/index.js"
  },
  "scripts": {
    "dev": "bun run index.ts",
    "build": "bun build index.ts --outfile=dist/index.js --target=node --minify",
    "serve:http": "APPLE_MCP_TRANSPORT=http APPLE_MCP_HTTP_PORT=8787 node dist/index.js",
    "start": "node dist/index.js",
    "prepublishOnly": "bun run build",
    "test": "bun run test-runner.ts all",
    "test:watch": "bun test ./tests --preload ./tests/setup.ts --watch",
    "test:calendar": "bun test tests/integration/calendar.test.ts --preload ./tests/setup.ts",
    "test:policy": "bun test tests/unit/tool-policy.test.ts",
    "test:schema": "bun test tests/unit/schema-compat.test.ts",
    "test:calendar-http": "bun run scripts/test-calendar-http.ts",
    "test:mcp": "bun run scripts/test-calendar-http.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.13.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@modelcontextprotocol/sdk": "^1.5.0",
    "content-type": "^1.0.5",
    "eventkit-node": "^1.0.3",
    "raw-body": "^3.0.0"
  }
}
